---
import Layout from "./Layout.astro";
const { title } = Astro.props;
---

<Layout title={title}>
    <section>
        <div class="container py-20 px-6 mx-auto">
            <div class="text-center">
                <h1 class="font-bold font-josefin text-4xl md:text-5xl text-blue-600">
                    {title}
                </h1>
            </div>
            <div class="mx-auto my-8 py-6">
                <slot />
            </div>
        </div>
    </section>
</Layout>
