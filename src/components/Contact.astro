---
// components/Contact.astro
import contactJson from "../content/contact/index.json";
import { SOCIAL_ICON_REGISTRY } from "../config/socialIcons";

const contact = contactJson;

// Fungsi untuk mendapatkan icon berdasarkan type
const getIcon = (type: "phone" | "email" | "address"): string => {
  switch(type) {
    case 'phone':
      return `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" /></svg>`;
    case 'email':
      return `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" /></svg>`;
    case 'address':
      return `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" /></svg>`;
    default:
      return '';
  }
}

// Fungsi untuk mendapatkan social icon
const getSocialIcon = (key: string): string => {
  return SOCIAL_ICON_REGISTRY[key]?.svg
    ?? `<svg xmlns="http://www.w3.org/2000/svg" ...>...</svg>`
}
---

<section class="relative">
    <div class="container relative py-20 w-full mx-auto rounded-b-4xl bg-cover bg-center before:content-[''] before:absolute before:bg-primary before:opacity-70 before:inset-0 before:rounded-b-4xl before:w-full before:h-full" 
          style={`background-image: url(${contact.hero.backgroundImage})`}>
      <div class="text-surface px-6 relative">
          <h1 class="text-4xl font-bold mb-4">{contact.hero.title}</h1>
          <p class="text-lg mb-8 lg:max-w-xl">
              {contact.hero.description}
          </p>
      </div>
    </div>
</section>
<section>
  <div class="container px-6 py-12 relative mx-auto">
        <div class="w-full">
            <div class="contact-card bg-surface shadow rounded-2xl p-6 md:p-10 -mt-32 lg:-mt-32">
                <h2 class="text-2xl md:text-3xl font-bold text-primary mb-8">
                  Hubungi Kami
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 items-start gap-4">
                    <div class="space-y-2 text-primary *:flex *:items-center">
                      {contact.contactInfo.details.map((item) => (
                        <div key={item.type}>
                            <div class="bg-surface p-3 rounded-lg mr-4" set:html={getIcon(item.type)}></div>
                            <p class="font-medium">{item.value}</p>
                        </div>
                      ))}
                    </div>
                    <div class="text-primary py-4 md:py-0 md:px-4 border-y md:border-y-0 md:border-l lg:border-r border-border">
                        <h3 class="text-xl font-semibold mb-4">Jam Operasional</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                          {contact.hours.days.map((day, index) => (
                            <div key={index}>
                                <p class="">{day.day}</p>
                                <p class="font-medium">{day.time}</p>
                            </div>
                          ))}
                        </div>
                    </div>
                    <div class="">
                    <h3 class="text-xl font-semibold text-primary mb-4">
                      Ikuti Kami:
                    </h3>
                    <div class="grid grid-cols-6 items-center justify-center gap-2 w-max *:transition-colors">
                      {(contact.socialMedia?.links ?? []).map((social) => (
                       
                        <a href={social.url} target="_blank" rel="noopener noreferrer" class="mx-auto"  title={SOCIAL_ICON_REGISTRY[social.iconKey]?.label}>
                          <p set:html={getSocialIcon(social.iconKey)} class="bg-primary text-surface hover:bg-secondary p-1 md:p-2 w-max rounded-full *:w-5 *:h-5"></p>
                        </a>
                      ))}
                    </div>
                </div>
                </div>
            </div>
                <iframe src={contact.mapEmbedUrl} width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" class="w-full h-xl mt-12 rounded-2xl " referrerpolicy="no-referrer-when-downgrade" title="myFrame"></iframe>
        </div>
  </div>
</section>