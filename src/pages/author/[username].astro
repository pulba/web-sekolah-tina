---
// src/pages/author/[username].astro
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import CardPosts from "../../components/CardPosts.astro";

export async function getStaticPaths() {
  const authors = await getCollection("authors");
  
  return authors.map(author => ({
    params: { 
      username: author.data.username 
    },
    props: { 
      authorId: author.id,
      username: author.data.username 
    }
  }));
}

const { username } = Astro.params;
const { authorId } = Astro.props;

if (!username) {
  return Astro.redirect("/404");
}

// Ambil semua authors untuk mencari yang sesuai
const allAuthors = await getCollection("authors");
const authorEntry = allAuthors.find(a => a.data.username === username);

if (!authorEntry) {
  return Astro.redirect("/404");
}

const authorData = authorEntry.data;

// Get all posts
const allPosts = await getCollection("posts");

// Filter posts by this author
const authorPosts = allPosts.filter(post => {
  const postAuthor = post.data.author;
  return postAuthor && postAuthor.trim() === username.trim();
});

// Sort posts by date
const sortedPosts = authorPosts.sort((a, b) => {
  const dateA = a.data.pubdate ? new Date(a.data.pubdate) : new Date(0);
  const dateB = b.data.pubdate ? new Date(b.data.pubdate) : new Date(0);
  return dateB.getTime() - dateA.getTime();
});

---

<Layout 
  title={`${authorData.name} - Author`}
  description={`Artikel-artikel oleh ${authorData.name}, ${authorData.role} di MAS Miftahul Huda Sanyir`}
>
  <div class="container mx-auto px-4 py-8">
    <!-- Author Profile Header -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-8">
      <div class="flex flex-col md:flex-row items-center md:items-start gap-6">
        <!-- Avatar -->
        <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-white shadow-lg">
          <img 
            src={authorData.avatar} 
            alt={authorData.name}
            class="w-full h-full object-cover"
            width="128"
            height="128"
          />
        </div>
        
        <!-- Author Info -->
        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">{authorData.name}</h1>
          <div class="inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium mb-4">
            {authorData.role}
          </div>
          
          {authorData.bio && (
            <p class="text-gray-600 mb-4 max-w-2xl">{authorData.bio}</p>
          )}
          
          <!-- Stats - TAMPILKAN JUMLAH YANG BENAR -->
          <div class="flex flex-wrap gap-4 mb-4">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
              </svg>
              <span class="font-medium">{sortedPosts.length} Artikel</span>
            </div>
            
            {authorData.email && (
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                </svg>
                <a href={`mailto:${authorData.email}`} class="text-blue-600 hover:underline">
                  {authorData.email}
                </a>
              </div>
            )}
          </div>
          
          <!-- Social Links -->
          {authorData.social && (
            <div class="flex gap-3">
              {authorData.social.twitter && (
                <a href={`https://twitter.com/${authorData.social.twitter}`} 
                   target="_blank"
                   rel="noopener noreferrer"
                   class="text-gray-500 hover:text-blue-400 transition">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"/>
                  </svg>
                </a>
              )}
              {authorData.social.instagram && (
                <a href={`https://instagram.com/${authorData.social.instagram}`}
                   target="_blank"
                   rel="noopener noreferrer"
                   class="text-gray-500 hover:text-pink-600 transition">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zm0 10.162a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
                  </svg>
                </a>
              )}
            </div>
          )}
        </div>
      </div>
    </div>
    
    <!-- Author's Articles -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Artikel oleh {authorData.name}</h2>
      
      {sortedPosts.length === 0 ? (
        <div class="text-center py-12 bg-gray-50 rounded-lg">
          <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <p class="text-gray-500 text-lg mb-4">Belum ada artikel dari author ini.</p>
          <a href="/" class="text-blue-600 hover:text-blue-800 font-medium">
            ‚Üê Kembali ke Beranda
          </a>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {sortedPosts.map((post, index) => {
            // Tentukan URL yang benar berdasarkan struktur sebenarnya
            let postUrl;
            
            // Cek filePath terlebih dahulu
            if (post.filePath) {
              const fp = post.filePath;
              if (fp.startsWith("src/content/posts/")) {
                const rel = fp.replace(/^src\/content\/posts\//, "");
                const parts = rel.split("/");
                if (parts.length >= 2) {
                  const category = parts[0];
                  const slugWithExt = parts.slice(1).join("/");
                  const slug = slugWithExt.replace(/\.mdx?$/, "");
                  postUrl = `/posts/${category}/${slug}`;
                }
              }
            }
            
            // Fallback: gunakan data frontmatter
            if (!postUrl) {
              const category = post.data.category || 'uncategorized';
              const slug = post.id?.replace(/\.mdx?$/, "").split("/").pop() || 
                          post.slug || 
                          post.data.title.toLowerCase().replace(/[^\w\s]/g, '').replace(/\s+/g, '-');
              postUrl = `/posts/${category}/${slug}`;
            }
            
            return (
              <CardPosts 
                title={post.data.title}
                description={post.data.description || ''}
                image={post.data.heroImage}
                date={post.data.pubdate}
                category={post.data.category}
                url={postUrl}
                author={authorData}
              />
            );
          })}
        </div>
      )}
    </div>
  </div>
</Layout>