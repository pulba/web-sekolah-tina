---
// src/pages/ppdb/status.astro
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Cek Status Pendaftaran">
  <div class="container min-h-screen mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-3xl font-bold text-center mb-8 text-gray-800">
        Cek Status Pendaftaran PPDB
      </h1>
      
      <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-100">
        <div class="mb-6">
          <label for="registrationId" class="block text-sm font-medium text-gray-700 mb-2">
            Masukkan ID Pendaftaran
          </label>
          <input 
            type="text" 
            id="registrationId"
            placeholder="Contoh: PPDB-1767351822841-1rg7mz8vu"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200"
          />
          <p class="text-sm text-gray-500 mt-2">
            ID pendaftaran didapat setelah mengisi formulir pendaftaran
          </p>
        </div>
        
        <button 
          id="checkBtn"
          class="w-full px-4 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200"
        >
          Cek Status
        </button>
        
        <div id="statusResult" class="mt-8 hidden">
          <!-- Hasil akan ditampilkan di sini -->
        </div>
      </div>
      
      <div class="mt-8 text-center">
        <a href="/ppdb" class="text-blue-600 hover:text-blue-800 font-medium">
          ‚Üê Kembali ke Form Pendaftaran
        </a>
      </div>
    </div>
  </div>
  
  <script>
    // Pastikan DOM sudah dimuat
    document.addEventListener('DOMContentLoaded', function() {
      const checkBtn = document.getElementById('checkBtn');
      const registrationId = document.getElementById('registrationId');
      const statusResult = document.getElementById('statusResult');
      
      // Fungsi untuk cek status
      async function checkStatus() {
        const id = registrationId.value.trim();
        
        if (!id) {
          alert('Masukkan ID pendaftaran terlebih dahulu');
          return;
        }
        
        // Disable button dan tampilkan loading
        checkBtn.disabled = true;
        checkBtn.innerHTML = '<span class="flex items-center justify-center"><svg class="animate-spin h-5 w-5 mr-2 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Memeriksa...</span>';
        checkBtn.classList.add('opacity-50');
        
        try {
          const response = await fetch(`/api/ppdb/get-status?id=${encodeURIComponent(id)}`);
          const result = await response.json();
          
          console.log('API Response:', result);
          
          // Reset button
          checkBtn.disabled = false;
          checkBtn.innerHTML = 'Cek Status';
          checkBtn.classList.remove('opacity-50');
          
          // Tampilkan hasil
          statusResult.innerHTML = '';
          statusResult.classList.remove('hidden');
          
          if (result.success && result.data) {
            const data = result.data;
            
            // Status badge berdasarkan status
            let statusClass = 'bg-yellow-100 text-yellow-800';
            let statusText = 'Menunggu Review';
            
            if (data.status === 'approved') {
              statusClass = 'bg-green-100 text-green-800';
              statusText = 'Diterima';
            } else if (data.status === 'rejected') {
              statusClass = 'bg-red-100 text-red-800';
              statusText = 'Ditolak';
            } else if (data.status === 'review') {
              statusClass = 'bg-blue-100 text-blue-800';
              statusText = 'Dalam Review';
            }
            
            // Format tanggal
            const formatDate = (dateString) => {
              try {
                const date = new Date(dateString);
                return date.toLocaleDateString('id-ID', {
                  weekday: 'long',
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                  hour: '2-digit',
                  minute: '2-digit'
                });
              } catch {
                return dateString;
              }
            };
            
            statusResult.innerHTML = `
              <div class="bg-white rounded-xl border border-gray-200 p-6 shadow-sm">
                <div class="flex items-center justify-between mb-6 pb-4 border-b">
                  <div>
                    <h3 class="text-xl font-bold text-gray-800">Status Pendaftaran</h3>
                    <p class="text-sm text-gray-500">Tanggal: ${formatDate(data.created_at)}</p>
                  </div>
                  <span class="px-4 py-2 rounded-full font-medium ${statusClass}">
                    ${statusText}
                  </span>
                </div>
                
                <div class="space-y-6">
                  <!-- ID Pendaftaran -->
                  <div class="bg-blue-50 p-4 rounded-lg">
                    <p class="text-sm font-medium text-blue-800 mb-1">ID Pendaftaran</p>
                    <p class="text-lg font-mono font-bold text-blue-900">${data.id}</p>
                    <p class="text-xs text-blue-600 mt-2">Gunakan ID ini untuk pengecekan ulang</p>
                  </div>
                  
                  <!-- Data Pribadi -->
                  <div>
                    <h4 class="font-semibold text-gray-700 mb-3 pb-2 border-b">Data Pribadi</h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                      <div>
                        <p class="text-sm text-gray-500">Nama Lengkap</p>
                        <p class="font-medium">${data.nama_lengkap}</p>
                      </div>
                      <div>
                        <p class="text-sm text-gray-500">Nama Panggilan</p>
                        <p class="font-medium">${data.nama_panggilan}</p>
                      </div>
                      <div>
                        <p class="text-sm text-gray-500">Tempat/Tanggal Lahir</p>
                        <p class="font-medium">${data.tempat_lahir}, ${data.tanggal_lahir}</p>
                      </div>
                      <div>
                        <p class="text-sm text-gray-500">Jenis Kelamin</p>
                        <p class="font-medium">${data.jenis_kelamin}</p>
                      </div>
                      <div>
                        <p class="text-sm text-gray-500">Agama</p>
                        <p class="font-medium">${data.agama}</p>
                      </div>
                      <div>
                        <p class="text-sm text-gray-500">Kontak</p>
                        <p class="font-medium">${data.nomor_hp}</p>
                        <p class="text-sm">${data.email}</p>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Alamat -->
                  <div>
                    <h4 class="font-semibold text-gray-700 mb-3 pb-2 border-b">Alamat</h4>
                    <p class="whitespace-pre-line">${data.alamat_lengkap}</p>
                  </div>
                  
                  <!-- Asal Sekolah -->
                  <div>
                    <h4 class="font-semibold text-gray-700 mb-3 pb-2 border-b">Asal Sekolah</h4>
                    <p class="font-medium mb-1">${data.asal_sekolah}</p>
                    <p class="text-gray-600 whitespace-pre-line">${data.alamat_sekolah}</p>
                  </div>
                  
                  <!-- Informasi Status -->
                  <div class="mt-6 pt-6 border-t">
                    ${data.status === 'pending' || !data.status ? `
                      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                        <div class="flex items-start">
                          <svg class="h-6 w-6 text-yellow-600 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                          </svg>
                          <div>
                            <h4 class="font-bold text-yellow-800 mb-1">Sedang Menunggu Review</h4>
                            <p class="text-yellow-700">Pendaftaran Anda sudah diterima dan sedang menunggu proses review oleh admin. Silakan cek kembali dalam 2-3 hari kerja.</p>
                          </div>
                        </div>
                      </div>
                    ` : ''}
                    
                    ${data.status === 'approved' ? `
                      <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                        <div class="flex items-start">
                          <svg class="h-6 w-6 text-green-600 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                          </svg>
                          <div>
                            <h4 class="font-bold text-green-800 mb-1">üéâ Selamat! Pendaftaran Diterima</h4>
                            <p class="text-green-700">Silakan menghubungi admin sekolah untuk informasi lebih lanjut mengenai proses selanjutnya.</p>
                          </div>
                        </div>
                      </div>
                    ` : ''}
                    
                    ${data.status === 'rejected' ? `
                      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                        <div class="flex items-start">
                          <svg class="h-6 w-6 text-red-600 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                          </svg>
                          <div>
                            <h4 class="font-bold text-red-800 mb-1">Informasi Penting</h4>
                            <p class="text-red-700">Silakan menghubungi admin sekolah untuk informasi lebih detail mengenai keputusan ini.</p>
                          </div>
                        </div>
                      </div>
                    ` : ''}
                  </div>
                </div>
                
                <div class="mt-8 pt-6 border-t border-gray-200 text-center">
                  <button 
                    onclick="window.print()"
                    class="px-4 py-2 bg-gray-100 text-gray-800 font-medium rounded-lg hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-300 transition duration-200 inline-flex items-center"
                  >
                    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
                    </svg>
                    Cetak Status
                  </button>
                </div>
              </div>
            `;
          } else {
            statusResult.innerHTML = `
              <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                <div class="flex items-center">
                  <svg class="h-6 w-6 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <h3 class="font-bold text-red-800">Data Tidak Ditemukan</h3>
                </div>
                <p class="text-red-700 mt-2">ID pendaftaran "${id}" tidak ditemukan. Pastikan ID yang dimasukkan benar.</p>
                <div class="mt-3 text-sm text-red-600">
                  <p>Tips:</p>
                  <ul class="list-disc list-inside ml-2">
                    <li>Periksa kembali ID pendaftaran</li>
                    <li>ID biasanya dimulai dengan "PPDB-"</li>
                    <li>Pastikan tidak ada spasi di awal atau akhir</li>
                  </ul>
                </div>
              </div>
            `;
          }
        } catch (error) {
          console.error('Error:', error);
          statusResult.innerHTML = `
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <h3 class="font-bold text-red-800">Terjadi Kesalahan</h3>
              <p class="text-red-700 mt-2">Gagal memeriksa status. Silakan coba lagi atau hubungi admin.</p>
            </div>
          `;
          statusResult.classList.remove('hidden');
          
          // Reset button
          checkBtn.disabled = false;
          checkBtn.innerHTML = 'Cek Status';
          checkBtn.classList.remove('opacity-50');
        }
      }
      
      // Tambahkan event listener ke button
      checkBtn.addEventListener('click', checkStatus);
      
      // Enter key untuk cek status
      registrationId.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
          checkStatus();
        }
      });
      
      // Auto-focus input
      registrationId.focus();
      
      // Cek jika ada ID di URL query parameter
      const urlParams = new URLSearchParams(window.location.search);
      const idFromUrl = urlParams.get('id');
      if (idFromUrl) {
        registrationId.value = idFromUrl;
        // Auto-check setelah 500ms
        setTimeout(() => {
          checkStatus();
        }, 500);
      }
    });
  </script>
  
  <style>
    @media print {
      body * {
        visibility: hidden;
      }
      #statusResult,
      #statusResult * {
        visibility: visible;
      }
      #statusResult {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
      }
      button, input, .no-print {
        display: none !important;
      }
    }
  </style>
</Layout>